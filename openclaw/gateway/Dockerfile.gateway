# OpenClaw Gateway Dockerfile
#
# Multi-stage build for optimal image size
#
# Usage:
#   docker build -f Dockerfile.gateway -t openclaw/gateway:latest
#   docker run -p 18789:18789 -v $(pwd)/workspace:/workspace openclaw/gateway

# ============================================================
# Stage 1: Dependencies
# ============================================================
FROM node:20-alpine AS dependencies

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache \
    python3 \
    make \
    bash \
    git

# Copy package files (context is gateway directory)
COPY package*.json ./
RUN npm install

# ============================================================
# Stage 2: Build
# ============================================================
FROM node:20-alpine AS build

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache \
    nodejs \
    npm \
    git \
    python3 \
    bash \
    curl

# Copy from dependencies stage
COPY --from=dependencies /app/node_modules ./node_modules
COPY --from=dependencies /app/package*.json ./

# Copy source code and tsconfig (context is gateway directory)
COPY src ./src
COPY tsconfig.json ./

# Build TypeScript
RUN npm run build

# ============================================================
# Stage 3: Production
# ============================================================
FROM node:20-alpine AS production

# Install runtime dependencies
RUN apk add --no-cache \
    nodejs \
    npm \
    git \
    python3 \
    bash \
    curl

# Create app directory
WORKDIR /app

# Copy from build stage
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package*.json ./
COPY --from=build /app/dist ./dist

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -u 1001 -S nodejs -G nodejs

# Set working directory for user
RUN mkdir -p /home/nodejs/.npm && \
    chown -R nodejs:nodejs /home/nodejs/.npm && \
    mkdir -p /workspace && \
    chown -R nodejs:nodejs /workspace

USER nodejs

# Expose ports
# 18789 - Gateway WebSocket
# 18790 - Health check
EXPOSE 18789 18790

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:18790/health || exit 1

# Set environment
ENV NODE_ENV=production \
    GATEWAY_PORT=18789 \
    GATEWAY_HOST=0.0.0.0 \
    WORKSPACE=/workspace \
    OLLAMA_BASE_URL=http://ollama-service:11434 \
    OLLAMA_MODEL=gemini-3-flash

# Start gateway
CMD ["node", "dist/gateway.js"]
