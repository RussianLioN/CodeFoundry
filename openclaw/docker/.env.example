# OpenClaw Docker Stack Environment Variables
#
# Copy this file to .env and configure your values

# ============================================================
# Workspace Configuration
# ============================================================

# Directory path (absolute or relative to docker-compose.yml)
WORKSPACE_DIR=./workspace

# ============================================================
# Telegram Bot Integration (Optional)
# ============================================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Comma-separated list of authorized Telegram user IDs
# Get your ID from @userinfobot or @GetMyIdBot
AUTHORIZED_USER_IDS=123456789,987654321

# Generate with: openssl rand -hex 32
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================
# Tailscale VPN (Optional - for remote access)
# ============================================================

# Get from https://login.tailscale.com/admin/settings/keys
TS_AUTHKEY=your_tailscale_authkey_here

# ============================================================
# Ollama Configuration
# ============================================================

# Ollama service URL (internal Docker network)
OLLAMA_BASE_URL=http://ollama-service:11434

# Default model to use
OLLAMA_MODEL=gemini-3-flash

# Fallback model
OLLAMA_FALLBACK_MODEL=openclaw-gemini

# ============================================================
# OpenClaw Gateway Configuration
# ============================================================

# Gateway WebSocket port
GATEWAY_PORT=18789

# Environment
NODE_ENV=production

# Session timeout (milliseconds)
SESSION_TIMEOUT=3600000

# Maximum concurrent sessions
MAX_SESSIONS=100

# ============================================================
# AI Provider Settings
# ============================================================

# Provider: ollama, anthropic, openai
AI_PROVIDER=ollama

# Model configuration
AI_MODEL=gemini-3-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096

# Retry configuration
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1000

# ============================================================
# Logging Configuration
# ============================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json

# ============================================================
# Voice Transcription (Optional)
# ============================================================

# Provider: openai, local
VOICE_TRANSCRIPTION_PROVIDER=openai

# OpenAI API key for Whisper
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================
# Voice Synthesis (Optional)
# ============================================================

# Provider: elevenlabs, local
VOICE_SYNTHESIS_PROVIDER=elevenlabs

# ElevenLabs configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# ============================================================
# Monitoring (Optional)
# ============================================================

# Enable Prometheus metrics
MONITORING_ENABLED=true

# Metrics port
METRICS_PORT=18791
