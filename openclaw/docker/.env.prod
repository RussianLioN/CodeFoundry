# OpenClaw Production Environment Variables
#
# Copy this to .env and configure for your production server

# ============================================================
# Server Configuration
# ============================================================

# Server domain (for SSL, notifications, etc.)
SERVER_DOMAIN=your-domain.example.com

# Server timezone
TZ=UTC

# ============================================================
# Workspace Configuration
# ============================================================

# Workspace directory on server
WORKSPACE_DIR=/opt/openclaw/workspace

# Projects directory
PROJECTS_DIR=/opt/openclaw/workspace/projects

# ============================================================
# Telegram Bot Configuration
# ============================================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Comma-separated list of authorized Telegram user IDs
# Get your ID from @userinfobot or @GetMyIdBot
AUTHORIZED_USER_IDS=123456789,987654321

# ============================================================
# OpenClaw Gateway Configuration
# ============================================================

# Gateway WebSocket port
GATEWAY_PORT=18789

# Gateway health check port
HEALTH_CHECK_PORT=18790

# Environment
NODE_ENV=production

# Session timeout (milliseconds) - 2 hours for production
SESSION_TIMEOUT=7200000

# Maximum concurrent sessions
MAX_SESSIONS=500

# ============================================================
# Ollama Configuration
# ============================================================

# Ollama service URL (internal Docker network)
OLLAMA_BASE_URL=http://ollama-service:11434

# Default model to use
OLLAMA_MODEL=gemini-3-flash

# Model settings
OLLAMA_KEEP_ALIVE=60m
OLLAMA_NUM_PARALLEL=8
OLLAMA_MAX_QUEUE=20

# ============================================================
# AI Provider Settings
# ============================================================

# Provider: ollama, anthropic, openai
AI_PROVIDER=ollama

# Model configuration
AI_MODEL=gemini-3-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096

# Retry configuration
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1000

# ============================================================
# Logging Configuration
# ============================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json

# Log directory
LOG_DIR=/opt/openclaw/logs

# ============================================================
# Monitoring (Optional)
# ============================================================

# Enable monitoring stack (Prometheus + Grafana)
MONITORING_ENABLED=false

# Metrics port
METRICS_PORT=18791

# Grafana configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_please

# ============================================================
# Backup Configuration
# ============================================================

# Enable automatic backups
BACKUP_ENABLED=true

# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Backup retention (days)
BACKUP_RETENTION=30

# Backup location (local)
BACKUP_DIR=/opt/openclaw/backups

# Cloud backup (optional)
# CLOUD_BACKUP_PROVIDER=s3  # s3, backblaze, gcs
# CLOUD_BACKUP_BUCKET=openclaw-backups
# CLOUD_BACKUP_REGION=us-east-1

# ============================================================
# SSL/TLS Configuration
# ============================================================

# SSL certificate mode: letsencrypt, selfsigned, custom
SSL_MODE=letsencrypt

# Let's Encrypt email
SSL_EMAIL=admin@your-domain.example.com

# ============================================================
# Security Configuration
# ============================================================

# Enable fail2ban
FAIL2BAN_ENABLED=true

# Allow SSH from specific IP only (leave empty to allow from anywhere)
SSH_ALLOW_FROM=

# ============================================================
# CI/CD Configuration
# ============================================================

# GitHub webhook secret (for CI/CD)
GITHUB_WEBHOOK_SECRET=generate_random_secret_here

# Deploy branch
DEPLOY_BRANCH=main

# ============================================================
# Git Configuration
# ============================================================

# Default Git author for auto-commits
GIT_AUTHOR_NAME=OpenClaw Bot
GIT_AUTHOR_EMAIL=openclaw-bot@example.com

# GitHub organization/user (for auto-repo creation)
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=ghp_your_github_pat_here

# ============================================================
# Notification Settings
# ============================================================

# Enable Telegram notifications for errors
ERROR_NOTIFICATIONS_ENABLED=true

# Telegram chat ID for alerts
ALERT_CHAT_ID=${AUTHORIZED_USER_IDS}
