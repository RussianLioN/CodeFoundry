# ═══════════════════════════════════════════════════════════════════════════════
# Rust Project Configuration for CLI Tool
# ═════════════════════════════════════════════════════════════════════════════════

[package]
name = "mycli"
version = "0.1.0"
edition = "2021"
description = "A professional CLI tool"
license = "MIT"
repository = "https://github.com/username/mycli"
readme = "README.md"
keywords = ["cli", "tool", "command-line"]
categories = ["command-line-interface"]

[[bin]]
name = "mycli"
path = "src/main.rs"

[dependencies]
# CLI framework
clap = { version = "4.5", features = ["derive"] }

# Async runtime
tokio = { version = "1.36", features = ["full"] }

# Configuration
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
toml = "0.8"

# Error handling
anyhow = "1.0"
thiserror = "1.0"

# HTTP client
reqwest = { version = "0.11", features = ["json"] }

# Terminal output
console = "0.15"
indicatif = "0.17"

[dev-dependencies]
assert_cmd = "2.0"
predicates = "3.1"

[profile.release]
opt-level = "z"
lto = true
codegen-units = 1
strip = true
