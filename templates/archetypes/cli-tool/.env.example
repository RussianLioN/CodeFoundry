# ═════════════════════════════════════════════════════════════════════════════
# Environment Variables for CLI Tool
# ═══════════════════════════════════════════════════════════════════════════════

# ────────────────────────────────────────────────────────────────────────────────
# Application Settings
# ────────────────────────────────────────────────────────────────────────────────
MYCLI_ENV=development
MYCLI_LOG_LEVEL=info
MYCLI_CONFIG_PATH=~/.mycli/config.yaml

# ────────────────────────────────────────────────────────────────────────────────
# API Configuration
# ────────────────────────────────────────────────────────────────────────────────
MYCLI_API_ENDPOINT=https://api.example.com
MYCLI_API_KEY=your_api_key_here
MYCLI_API_TIMEOUT=30

# ────────────────────────────────────────────────────────────────────────────────
# Output Settings
# ────────────────────────────────────────────────────────────────────────────────
MYCLI_OUTPUT_FORMAT=table
MYCLI_OUTPUT_COLOR=true
MYCLI_OUTPUT_PAGER=false

# ────────────────────────────────────────────────────────────────────────────────
# Feature Flags
# ────────────────────────────────────────────────────────────────────────────────
MYCLI_EXPERIMENTAL_FEATURES=false
MYCLI_DEBUG=false
MYCLI_VERBOSE=false

# ────────────────────────────────────────────────────────────────────────────────
# Telemetry (Optional)
# ────────────────────────────────────────────────────────────────────────────────
MYCLI_TELEMETRY_ENABLED=false
MYCLI_TELEMETRY_ENDPOINT=
