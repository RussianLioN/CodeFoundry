{
  "archetype": "microservices",
  "version": "1.0.0",
  "description": "Distributed microservices profile (K8s, Istio, gRPC)",
  "extends": "base",
  "agents": {
    "add": ["architect", "sre", "devops"],
    "remove": [],
    "configure": {
      "code-assistant": {
        "specialization": "Microservice development, gRPC, event-driven architecture",
        "languages": ["typescript", "go", "python"]
      }
    }
  },
  "skills": {
    "add": ["api-development", "security-check"]
  },
  "commands": {
    "add": ["deploy", "test"]
  },
  "routing": {
    "overrides": {
      "architecture|ddd|bounded context|api design|event schema": "architect",
      "slo|sli|monitoring|alert|incident|capacity": "sre",
      "deploy|docker|k8s|helm|istio|service mesh": "devops",
      "service|grpc|proto|handler|consumer|producer": "code-assistant"
    }
  },
  "variables": {
    "default_language": "go",
    "default_framework": "grpc",
    "test_framework": "go test",
    "docker_enabled": true,
    "k8s_enabled": true
  }
}
