{
  "archetype": "web-service",
  "version": "1.0.0",
  "description": "REST/GraphQL API service profile",
  "extends": "base",
  "agents": {
    "add": ["devops", "tester"],
    "remove": [],
    "configure": {
      "code-assistant": {
        "specialization": "REST API development, Express/FastAPI/NestJS",
        "languages": ["typescript", "python", "go"]
      }
    }
  },
  "skills": {
    "add": ["api-development", "security-check"]
  },
  "commands": {
    "add": ["deploy", "test"]
  },
  "routing": {
    "overrides": {
      "api|endpoint|route|middleware|handler": "code-assistant",
      "deploy|docker|k8s|helm|infrastructure": "devops",
      "test|spec|coverage|mock": "tester",
      "review|pr|quality|security": "reviewer"
    }
  },
  "variables": {
    "default_language": "typescript",
    "default_framework": "express",
    "test_framework": "jest",
    "docker_enabled": true,
    "k8s_enabled": true
  }
}
