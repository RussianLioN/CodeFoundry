# =============================================================================
# CodeFoundry Remote Testing Environment
# =============================================================================
# Copy this file to .env.test and fill in your actual values
# =============================================================================
# cp .env.test.example .env.test
# nano .env.test
# =============================================================================

# -----------------------------------------------------------------------------
# Project Configuration
# -----------------------------------------------------------------------------

PROJECT_NAME=system-prompts
PROJECT_DIR=/root/projects/system-prompts
GITHUB_REPO=git@github.com:your-username/system-prompts.git
DEFAULT_BRANCH=main

# -----------------------------------------------------------------------------
# Container Configuration
# -----------------------------------------------------------------------------

CONTAINER_PREFIX=test
SESSION_TIMEOUT=86400  # 24 hours in seconds

COMPOSE_PROJECT_NAME=codefoundry-test
DOCKER_NETWORK=codefoundry-test-net

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

LOG_DIR=/var/log/codefoundry
LOG_RETENTION_DAYS=7
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
# Get your user ID from @userinfobot on Telegram

TELEGRAM_BOT_TOKEN=your_bot_token_here
AUTHORIZED_USER_IDS=your_user_id_here

# -----------------------------------------------------------------------------
# Gateway Configuration
# -----------------------------------------------------------------------------

GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=18789
GATEWAY_HEALTH_PORT=18790
GATEWAY_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Ollama Configuration (Optional)
# -----------------------------------------------------------------------------
# Set to true if you want to use local Ollama for AI

OLLAMA_ENABLED=false
OLLAMA_MODEL=gemini-3-flash-preview
OLLAMA_HOST=http://ollama:11434
OLLAMA_GPU=false

# -----------------------------------------------------------------------------
# Session Management
# -----------------------------------------------------------------------------

SESSION_AUTO_CLEANUP=true
SESSION_MAX_AGE_HOURS=24
SESSION_MAX_COUNT=10

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------

TEST_TIMEOUT_SECONDS=300
TEST_RETRY_COUNT=3
TEST_PARALLEL=false

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------

METRICS_ENABLED=false
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# -----------------------------------------------------------------------------
# Development (Optional)
# -----------------------------------------------------------------------------

DEV_CONTAINER_ENABLED=false
DEV_HOT_RELOAD=true
DEV_LOG_LEVEL=debug
