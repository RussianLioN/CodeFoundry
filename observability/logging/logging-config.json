{
  "_comment": "Structured Logging Configuration for System Prompts",
  "version": 1,
  "formatters": {
    "json": {
      "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s %(name)s %(levelname)s %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "json",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/system-prompts.log",
      "maxBytes": 10485760,
      "backupCount": 5
    }
  },
  "loggers": {
    "system-prompts": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "project-generator": {
      "level": "INFO",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "github-sync": {
      "level": "INFO",
      "handlers": ["console", "file"],
      "propagate": false
    }
  },
  "root": {
    "level": "WARNING",
    "handlers": ["console"]
  }
}
